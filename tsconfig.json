{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"noEmit": false,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
